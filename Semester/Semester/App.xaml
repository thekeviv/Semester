<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semester.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="Bodoni">
                <On Platform="Android" Value="BodoniMTCondensed.ttf#Bodoni" />
                <On Platform="iOS" Value="BodoniMTCondensed"/>
            </OnPlatform>

            <Style TargetType="Label" x:Key="BoldAndItalic">
                <Setter Property="FontAttributes" Value="Bold, Italic"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>